<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="PlantAlarm.Views.PlantsPage"
             xmlns:controls="clr-namespace:PlantAlarm.CustomControls"
             Title="Garden">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New item" Command="{Binding ShowNewPlantPageCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <CollectionView ItemsSource="{Binding PlantItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <StackLayout>
                                    <Label Text="{Binding Plant.Name}" FontSize="18" FontAttributes="Bold" />
                                </StackLayout>
                                <Image WidthRequest="80" HeightRequest="80" Source="{Binding MainPhoto.Url}" VerticalOptions="Center" Aspect="AspectFill" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
