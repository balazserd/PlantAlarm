<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantAlarm.Views.NewPlantPage"
             xmlns:customControls="clr-namespace:PlantAlarm.CustomControls"
             xmlns:customEffects="clr-namespace:PlantAlarm.Effects"
             xmlns:customBehaviors="clr-namespace:PlantAlarm.Behaviors"
             Title="New Plant">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddPlantCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="15">
            <Label Text="Basic Info" FontSize="22" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Black" Margin="-5,0,-5,5" />
            <Grid HeightRequest="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Label Text="Name" VerticalOptions="Center" FontAttributes="Bold"/>
                <Entry HorizontalOptions="Fill" Grid.Column="1" HorizontalTextAlignment="End"
                        Text="{Binding PlantName}" FontAttributes="Italic">
                    <Entry.Effects>
                        <customEffects:BorderlessEffect />
                    </Entry.Effects>
                </Entry>
            </Grid>
            <BoxView HeightRequest="1" Color="LightGray"/>
            <Grid HeightRequest="30">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ShowCategorySelectorPageCommand}" />
                </Grid.GestureRecognizers>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Label Text="Categories" VerticalOptions="Center" Grid.Column="0" FontAttributes="Bold"/>
                <Label Text="{Binding SelectedCategoriesMessage}" VerticalOptions="Center" 
                       Grid.Column="1" LineBreakMode="WordWrap" MaxLines="2" FontAttributes="Italic"
                       HorizontalOptions="End" TextColor="{Binding CategoriesTextColor}"/>
            </Grid>
            <Label Text="Picture" FontSize="22" FontAttributes="Bold"
                    VerticalOptions="Center" Margin="0,20,0,0" />
            <BoxView HeightRequest="1" Margin="-5,0,-5,0" Color="Black" />
            <Label Text="You will be able to add more pictures later to track your progress." TextColor="Gray" FontAttributes="Italic"
                   Margin="0,5,0,5" FontSize="11" />
            <customControls:SquaredImageContainerStack HorizontalOptions="FillAndExpand">
                <Grid>
                    <ImageButton Source="AddButtonGreen.png" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"
                                 Command="{Binding AddPhotoCommand}" />
                    <StackLayout IsVisible="{Binding HasPhoto}">
                        <customControls:SquaredImage Source="{Binding PhotoToAdd.Url}" HorizontalOptions="FillAndExpand"
                                                     Aspect="AspectFill">
                            <customControls:SquaredImage.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowPhotoOptionsCommand}" />
                            </customControls:SquaredImage.GestureRecognizers>
                            <customControls:SquaredImage.Effects>
                                <customEffects:RoundedCornerEffect Radius="7" />
                            </customControls:SquaredImage.Effects>
                        </customControls:SquaredImage>
                        <Label Text="You can change the photo by tapping it." TextColor="Gray" FontAttributes="Italic"
                               Margin="0,5,0,5" FontSize="11" />

                        <StackLayout.Behaviors>
                            <customBehaviors:FadingBehavior />
                        </StackLayout.Behaviors>
                    </StackLayout>
                </Grid>
            </customControls:SquaredImageContainerStack>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
